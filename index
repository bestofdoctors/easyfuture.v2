    <script>
        // Solana Web3 nesnesi
        const solanaWeb3 = window.solanaWeb3;
        
        // DOM Elements
        const connectWalletBtn = document.getElementById('connectWallet');
        const disconnectWalletBtn = document.getElementById('disconnectWallet');
        const balanceEl = document.getElementById('balance');
        const walletStatus = document.getElementById('walletStatus');
        
        // Filtre butonlarÄ±
        const filterBtns = document.querySelectorAll('.filter-btn');
        const propertyCards = document.querySelectorAll('.property-card');
        
        // Filtreleme iÅŸlevi
        filterBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                // Aktif butonu gÃ¼ncelle
                filterBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                const filter = btn.dataset.filter;
                
                propertyCards.forEach(card => {
                    if (filter === 'all') {
                        card.style.display = 'block';
                    } else {
                        if (card.dataset.status === filter) {
                            card.style.display = 'block';
                        } else {
                            card.style.display = 'none';
                        }
                    }
                });
            });
        });
        
        // SatÄ±n alma butonlarÄ±
        const buyButtons = document.querySelectorAll('.action-btn');
        buyButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                const card = btn.closest('.property-card');
                const title = card.querySelector('.property-title').textContent;
                const price = card.querySelector('.property-price').textContent;
                const solPrice = card.querySelector('.sol-price')?.textContent || '';
                
                if (btn.classList.contains('buy-full-btn')) {
                    alert(`"${title}" emlakÄ±nÄ±n tamamÄ±nÄ± satÄ±n almak iÃ§in iÅŸlem baÅŸlatÄ±lÄ±yor...\n\n${price}\n${solPrice}`);
                } else if (btn.classList.contains('buy-shares-btn')) {
                    alert(`"${title}" emlakÄ±ndan hisse satÄ±n almak iÃ§in iÅŸlem baÅŸlatÄ±lÄ±yor...\n\n${price}\n${solPrice}`);
                }
            });
        });
        
        // Phantom Wallet baÄŸlantÄ±sÄ±
        async function connectPhantomWallet() {
            if (window.solana && window.solana.isPhantom) {
                try {
                    // Wallet'Ä± baÄŸla
                    const response = await window.solana.connect();
                    const publicKey = response.publicKey.toString();
                    
                    // BaÄŸlantÄ± durumunu gÃ¼ncelle
                    connectWalletBtn.textContent = 'BaÄŸlandÄ±';
                    connectWalletBtn.classList.add('connected');
                    
                    // SOL bakiyesini al
                    const connection = new solanaWeb3.Connection(solanaWeb3.clusterApiUrl('mainnet-beta'));
                    const balance = await connection.getBalance(response.publicKey);
                    const solBalance = balance / solanaWeb3.LAMPORTS_PER_SOL;
                    
                    // Bakiyeyi gÃ¶ster
                    balanceEl.textContent = solBalance.toFixed(2) + ' SOL';
                    
                    // BaÅŸarÄ± mesajÄ±
                    walletStatus.textContent = `ðŸ”— ${publicKey.substring(0, 6)}...${publicKey.substring(publicKey.length - 4)} adresine baÄŸlandÄ±nÄ±z`;
                    walletStatus.className = 'wallet-status status-connected';
                    walletStatus.style.display = 'block';
                    
                } catch (error) {
                    console.error('BaÄŸlantÄ± hatasÄ±:', error);
                    walletStatus.textContent = 'BaÄŸlantÄ± hatasÄ±: ' + error.message;
                    walletStatus.className = 'wallet-status status-error';
                    walletStatus.style.display = 'block';
                }
            } else {
                walletStatus.textContent = 'Phantom Wallet yÃ¼klÃ¼ deÄŸil! LÃ¼tfen yÃ¼kleyin.';
                walletStatus.className = 'wallet-status status-error';
                walletStatus.style.display = 'block';
                
                // Phantom Wallet indirme sayfasÄ±na yÃ¶nlendir
                window.open('https://phantom.app/', '_blank');
            }
        }
        
        // Phantom Wallet baÄŸlantÄ±sÄ±nÄ± kes
        function disconnectPhantomWallet() {
            if (window.solana && window.solana.disconnect) {
                window.solana.disconnect();
            }
            
            connectWalletBtn.textContent = 'Phantom BaÄŸla';
            connectWalletBtn.classList.remove('connected');
            balanceEl.textContent = '0.00 SOL';
            walletStatus.style.display = 'none';
        }
        
        // Event listener'lar
        connectWalletBtn.addEventListener('click', connectPhantomWallet);
        disconnectWalletBtn.addEventListener('click', disconnectPhantomWallet);
        
        // Sayfa yÃ¼klendiÄŸinde otomatik baÄŸlanma denemesi
        window.addEventListener('load', async () => {
            if (window.solana && window.solana.isPhantom) {
                try {
                    // Daha Ã¶nce baÄŸlanmÄ±ÅŸsa otomatik baÄŸlan
                    const response = await window.solana.connect({ onlyIfTrusted: true });
                    const publicKey = response.publicKey.toString();
                    
                    // BaÄŸlantÄ± durumunu gÃ¼ncelle
                    connectWalletBtn.textContent = 'BaÄŸlandÄ±';
                    connectWalletBtn.classList.add('connected');
                    
                    // SOL bakiyesini al
                    const connection = new solanaWeb3.Connection(solanaWeb3.clusterApiUrl('mainnet-beta'));
                    const balance = await connection.getBalance(response.publicKey);
                    const solBalance = balance / solanaWeb3.LAMPORTS_PER_SOL;
                    
                    // Bakiyeyi gÃ¶ster
                    balanceEl.textContent = solBalance.toFixed(2) + ' SOL';
                    
                    // BaÅŸarÄ± mesajÄ±
                    walletStatus.textContent = `ðŸ”— ${publicKey.substring(0, 6)}...${publicKey.substring(publicKey.length - 4)} adresine baÄŸlandÄ±nÄ±z`;
                    walletStatus.className = 'wallet-status status-connected';
                    walletStatus.style.display = 'block';
                    
                } catch (autoConnectError) {
                    console.log('Otomatik baÄŸlantÄ± yapÄ±lamadÄ±, kullanÄ±cÄ± butona basmalÄ±:', autoConnectError);
                }
            }
        });
    </script>
