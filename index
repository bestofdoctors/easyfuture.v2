    <script>
        // Bağlantı durumu kontrolü
        const connectWalletBtn = document.getElementById('connectWallet');
        const disconnectWalletBtn = document.getElementById('disconnectWallet');
        const balanceEl = document.getElementById('balance');
        
        // Filtre butonları
        const filterBtns = document.querySelectorAll('.filter-btn');
        const propertyCards = document.querySelectorAll('.property-card');
        
        // Filtreleme işlevi
        filterBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                // Aktif butonu güncelle
                filterBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                const filter = btn.dataset.filter;
                
                propertyCards.forEach(card => {
                    if (filter === 'all') {
                        card.style.display = 'block';
                    } else {
                        if (card.dataset.status === filter) {
                            card.style.display = 'block';
                        } else {
                            card.style.display = 'none';
                        }
                    }
                });
            });
        });
        
        // Satın alma butonları
        const buyButtons = document.querySelectorAll('.action-btn');
        buyButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                const card = btn.closest('.property-card');
                const title = card.querySelector('.property-title').textContent;
                
                if (btn.classList.contains('buy-full-btn')) {
                    alert(`"${title}" emlakının tamamını satın almak için işlem başlatılıyor...`);
                } else if (btn.classList.contains('buy-shares-btn')) {
                    alert(`"${title}" emlakından hisse satın almak için işlem başlatılıyor...`);
                }
            });
        });
        
        // Wallet bağlantı simülasyonu
        connectWalletBtn.addEventListener('click', () => {
            connectWalletBtn.textContent = 'Bağlandı';
            connectWalletBtn.classList.add('connected');
            balanceEl.textContent = '8.75 SOL';
            alert('Phantom Wallet başarıyla bağlandı!');
        });
        
        disconnectWalletBtn.addEventListener('click', () => {
            connectWalletBtn.textContent = 'Phantom Bağla';
            connectWalletBtn.classList.remove('connected');
            balanceEl.textContent = '0.00 SOL';
            alert('Phantom Wallet bağlantısı kesildi!');
        });
    </script>
</body>
</html>
